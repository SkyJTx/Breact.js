{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist"
    },
    "include": [
        "index.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build.ts",
        "src/cli/**/*"
    ]
}